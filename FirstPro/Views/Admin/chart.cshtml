<!DOCTYPE html>
<html>
<head>
    <title>Recipe Sales Chart and Financial Summary</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <h2>Recipe Sales Chart</h2>
        <canvas id="recipeSalesChart"></canvas>
        
        <h2>Financial Summary</h2>
        <p>Total Price: @ViewBag.totalprice</p>
        <p>My Profit: @ViewBag.myprofit</p>
        <p>Expenses: @ViewBag.expenses</p>
        <p>Amount of Profit or Loss: @ViewBag.Ammount</p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('recipeSalesChart').getContext('2d');
            var recipeSalesData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.RecipeSales));

            var labels = recipeSalesData.map(function (item) {
                return item.RecipeName;
            });

            var data = recipeSalesData.map(function (item) {
                return item.SalesCount;
            });

            new Chart(ctx, {
type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Number of Sales',
                        data: data,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>
