<div class="center-page">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h4>Category Table </h4>
                       <a asp-action="Create" class="btn btn-success" >Create New</a>

                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Categoryname)</td>
                                    <td>
                                        <img src="@Url.Content("~/Images/" + item.Imagepath)" asp-append-version="true" style="border-radius: 20%;" width="100" height="100" />
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Categoryid" class="btn btn-info">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Categoryid" class="btn btn-success">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Categoryid" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
