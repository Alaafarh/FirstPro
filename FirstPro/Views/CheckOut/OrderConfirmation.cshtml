<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/dom-to-image/2.6.0/dom-to-image.min.js"></script>
<script>
    document.getElementById('downloadBtn').addEventListener('click', function () {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();

        // تحديد عنصر HTML الذي يحتوي على المحتوى الذي تريد تنزيله
        const receipt = document.querySelector('body');

        // تحويل العنصر إلى صورة ثم تضمينها في ملف PDF
        domtoimage.toPng(receipt)
            .then(function (dataUrl) {
                const img = new Image();
                img.src = dataUrl;
                img.onload = function () {
                    doc.addImage(img, 'PNG', 10, 10, 180, img.height * 180 / img.width);
                    doc.save('order-confirmation.pdf');
                };
            })
            .catch(function (error) {
                console.error('حدث خطأ أثناء تحويل العنصر إلى صورة:', error);
            });
    });
</script>



