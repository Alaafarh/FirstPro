@model IEnumerable<Wishlist>

@{
        Layout = "~/Views/Shared/Home.cshtml";

    ViewData["Title"] = "Wishlist";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<style>
    .row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .carousel {
        overflow: hidden;
    }

    .grid_5 {
        width: calc(33.33% - 20px);
        margin-right: 20px;
        box-sizing: border-box;
    }

    .image {
        width: 100%;
        height: auto;
    }

    .txt-al {
        text-align: left;
    }

    .button {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 20px;
        background-color: #0da9ef;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
    }

    .button:hover {
        background-color: #0a87c3;
    }
</style>

<section id="content">
    <div class="container_24">
        <div class="wrapper bg-wrapper">
            <div class="grid_17 suffix_1">
                <h2 class="padd-3">Wishlist</h2>
                <div class="main-carousel">
                    <div class="carousel">
                        @for (int i = 0; i < Model.Count(); i += 3)
                        {
                            <div class="row">
                                @for (int j = i; j < i + 3 && j < Model.Count(); j++)
                                {
                                    var item = Model.ElementAt(j);
                                    <div class="grid_5 txt-al suffix_1 marg-left-0">
                                        <img src="@Url.Content("~/Images/" + item.Recipe.Imagepath)" alt="" class="image" />
                                        <h3 class="top-1">@item.Recipe.Recipename</h3>
                                        <p class="font-14 top-2">@item.Recipe.Discription</p>
                                        <h2>Price: @item.Recipe.Price AED</h2>
                                          <a asp-action="Deletewishlist" asp-controller="Custmer" asp-route-id="@item.Wishlist1" style="background-color:forestgreen" class="button top-1 bot">Remove Recipe</a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div><!-- the end of wrapper -->
    </div>
</section>
