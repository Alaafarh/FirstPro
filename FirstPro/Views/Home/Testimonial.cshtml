@*
    @model IEnumerable<Testimonial>

@{
    Layout = "~/Views/Shared/Home.cshtml";
}

<section id="content">         
    <div class="container_24">
        <div class="wrapper bg-wrapper">
            <div class="grid_17 suffix_1">
                <h2 class="padd-3"> User Comments </h2>
                <div class="main-carousel">
                    <div class="carousel">
                      
                                @foreach (var item in Model)
                                {
                                      <div class="grid_5 txt-al suffix_1 marg-left-0">
                                        <img src="@Url.Content("~/Images/" + @item.User.Imagepath)" alt="" class="image" />
                                          <h3 class="top-1">@item.User.Fname</h3>
                                         <p class="font-14 top-2">@item.CommentUser</p>

                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

          </div>
          </section>
<style>
    .row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .carousel {
        overflow: hidden;
    }

    .grid_5 {
        width: calc(33.33% - 20px);
        margin-right: 20px;
        box-sizing: border-box;
    }
