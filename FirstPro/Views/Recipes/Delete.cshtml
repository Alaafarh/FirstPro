@model FirstPro.Models.Recipe

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container">
    <div class="card mx-auto" style="max-width: 400px;margin:30px">
        <h5 class="card-header">Delete Recipe</h5>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete this?</h5>
            <dl class="row">
                <dt class="col-sm-3">Recipe Name:</dt>
                <dd class="col-sm-9">@Model.Recipename</dd>
                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">@Model.Price</dd>
                <dt class="col-sm-3">Stuts:</dt>
                <dd class="col-sm-9">@Model.Flag</dd>
                <dt class="col-sm-3">Created Date:</dt>
                <dd class="col-sm-9">@Model.Creatdate</dd>
                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Discription</dd>
                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Model.Category.Categoryname</dd>
                <dt class="col-sm-3">User name:</dt>
                <dd class="col-sm-9">@Model.User.Fname @Model.User.Lname</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Recipeid" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
